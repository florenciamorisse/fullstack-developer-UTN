<div class="container">
  <div class="row text-center login-page" style="margin-top: 90px;">
    <div
      class="col-md-12 login-form"
      style="margin-top: -162px;border-radius: 1.5em;"
    >
      <form action="/admin/login" method="post">
        <div class="row">
          <div class="col-md-12 login-form-header">
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 login-from-row">
            <input
              name="usuario"
              type="text"
              placeholder="Usuario"
              style="border-radius: 0.2em;"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 login-from-row">
            <input
              name="password"
              type="password"
              placeholder="Contraseña"
              style="border-radius: 0.2em;"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 login-from-row">
            <button
              class="btn btn-info"
              style="background-color:#2e64a1;"
            >Entrar</button>
          </div>
        </div>
      </form>
      {{#if error}}
        <p>Usuario o contraseña incorrecto</p>
        {{/if}}
    </div>
  </div>
</div>